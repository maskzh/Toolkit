//====================================================
//  Borders
//====================================================

$border-style = solid
$border-color = #D9D9D9
$border-radius = 3px

$border-1 = 1px
$border-2 = 2px
$border-3 = 3px

.b0 { border: 0 }
.b1 { border: $border-1 $border-style $border-color }
.b2 { border: $border-2 $border-style $border-color }
.b3 { border: $border-3 $border-style $border-color }

// Top
.bt0 { border-top: none }
.bt1 { border-top: $border-1 $border-style $border-color }
.bt2 { border-top: $border-2 $border-style $border-color }
.bt3 { border-top: $border-3 $border-style $border-color }

// Right
.br0 { border-right: none }
.br1 { border-right: $border-1 $border-style $border-color }
.br2 { border-right: $border-2 $border-style $border-color }
.br3 { border-right: $border-3 $border-style $border-color }

// Bottom
.bb0 { border-bottom: none }
.bb1 { border-bottom: $border-1 $border-style $border-color }
.bb2 { border-bottom: $border-2 $border-style $border-color }
.bb3 { border-bottom: $border-3 $border-style $border-color }

// Left
.bl0 { border-left: none }
.bl1 { border-left: $border-1 $border-style $border-color }
.bl2 { border-left: $border-2 $border-style $border-color }
.bl3 { border-left: $border-3 $border-style $border-color }

//====================================================
//  Hair Borders
//====================================================

.ht
  content: " "
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 1px
  border-top: 1px $border-style $border-color
  color: $border-color
  transform-origin: 0 0
  transform: scaleY(0.5)

.hr
  content: " "
  position: absolute
  right: 0
  top: 0
  width: 1px
  height: 100%
  border-right: 1px $border-style $border-color
  color: $border-color
  transform-origin: 100% 0
  transform: scaleX(0.5)

.hb
  content: " "
  position: absolute
  left: 0
  bottom: 0
  width: 100%
  height: 1px
  border-top: 1px $border-style $border-color
  color: $border-color
  transform-origin: 0 0
  transform: scaleY(0.5)

.hl
  content: " "
  position: absolute
  left: 0
  top: 0
  width: 1px
  height: 100%
  border-right: 1px $border-style $border-color
  color: $border-color
  transform-origin: 100% 0
  transform: scaleX(0.5)

//====================================================
//  Border Radius
//====================================================

.rounded     { border-radius: $border-radius }
.not-rounded { border-radius: 0 }
.circle      { border-radius: 50% }
