//====================================================
//  Display
//====================================================

.hidden, .hide, .none { display: none }

.block, .db         { display: block }
.inline, .di        { display: inline }
.inline-block, .dib { display: inline-block }

.flex         { display: flex }
.inline-flex  { display: inline-flex }

//====================================================
//  overflow & Scrolling
//====================================================

.overflow-hidden, .ofh { overflow: hidden }
.overflow-scroll, .ofs { overflow: scroll }
.overflow-auto, .ofa   { overflow: auto }

.scroll-x
  overflow-x: scroll
  overflow-y: hidden

.scroll-y
  overflow-x: hidden
  overflow-y: scroll

// hide scrollbar
.no-scrollbar::-webkit-scrollbar
  width: 0px
  height: 0px
  background: transparent

//====================================================
//  Text wrap
//====================================================

.pre       { white-space: pre }
.nowrap    { white-space: nowrap }

//====================================================
//  Textareas
//====================================================

.resize-none       { resize: none }
.resize-vertical   { resize: vertical }
.resize-horizontal { resize: horizontal }

//====================================================
//  Misc.
//====================================================

.pointer { cursor: pointer }
.not-allowed { cursor: not-allowed }

.prevent { pointer-events: none }

.disabled { opacity: 0.5; cursor: not-allowed; pointer-events: none }
